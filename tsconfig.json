{
  "compilerOptions": {
		"allowJs": false,
		"declaration": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
    "lib": [
			"esnext",
			"DOM",
			"DOM.Iterable"
		],
    "module": "esnext",
		"outDir": "dist",
		"resolveJsonModule": false,
		"rootDir": "src",
		"skipLibCheck": true,
		"sourceMap": true,
		"strict": true,
    "target": "esnext",
		"verbatimModuleSyntax": true,
  }
}
